import cv2
import numpy as np
import tflite_runtime.interpreter as tflite
from picamera2 import Picamera2

print("OpenCV version:", cv2.__version__)
print("NumPy version:", np.__version__)

picam2 = Picamera2()
picam2.start()
frame = picam2.capture_array()
cv2.imshow("Camera", frame)
cv2.waitKey(0)

